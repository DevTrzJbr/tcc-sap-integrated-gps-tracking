<mvc:View
	controllerName="com.tcc.gpstracking.controller.Page2"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<Page
		id="page2"
		title="Page 2"
		showNavButton="true"
		navButtonPress=".onNavBack"
	>
		<content>
			<VBox renderType="Bare">
				<MessageStrip
					text="{transportes>/error}"
					type="Error"
					showIcon="true"
					visible="{= !!${transportes>/error} }"
				/>
				<SplitApp
					id="SplitAppDemo"
					initialDetail="detail"
					initialMaster="master">
					<detailPages>
						<core:Fragment
							fragmentName="com.tcc.gpstracking.view.fragments.page2.DetailIntro"
							type="XML" />
						<core:Fragment
							fragmentName="com.tcc.gpstracking.view.fragments.page2.DetailMain"
							type="XML" />
						<core:Fragment
							fragmentName="com.tcc.gpstracking.view.fragments.page2.DetailSecondary"
							type="XML" />
					</detailPages>
					<masterPages>
						<core:Fragment
							fragmentName="com.tcc.gpstracking.view.fragments.page2.MasterTransport"
							type="XML" />
						<core:Fragment
							fragmentName="com.tcc.gpstracking.view.fragments.page2.MasterRoutes"
							type="XML" />
					</masterPages>
				</SplitApp>
			</VBox>
		</content>
	</Page>
</mvc:View>
