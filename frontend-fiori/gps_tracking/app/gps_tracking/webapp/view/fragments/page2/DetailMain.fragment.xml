<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page
        id="detailDetail"
        title="Detail da Rota"
        backgroundDesign="Solid"
        showNavButton="true"
        navButtonPress=".onPressDetailBack">
        <core:Fragment
            fragmentName="com.tcc.gpstracking.view.fragments.Map"
            type="XML" />
        <ScrollContainer
            height="100%"
            horizontal="false"
            vertical="true">
            <VBox
                class="sapUiSmallMargin"
                visible="{= !!${page2>/selectedRoute} }">
                <VBox
                    id="headerCardHost"
                    class="sapUiMediumMarginBottom"
                    width="100%" />
                <HBox
                    class="sapUiMediumMarginBottom"
                    wrap="Wrap"
                    items="{metricsTiles>/items}">
                    <items>
                        <GenericTile
                            class="sapUiTinyMarginEnd sapUiSmallMarginBottom"
                            header="{metricsTiles>title}"
                            subheader="{metricsTiles>subtitle}">
                            <tileContent>
                                <TileContent unit="{metricsTiles>unit}">
                                    <content>
                                        <NumericContent
                                            value="{metricsTiles>value}"
                                            valueColor="{metricsTiles>valueColor}"
                                            size="L" />
                                    </content>
                                </TileContent>
                            </tileContent>
                        </GenericTile>
                    </items>
                </HBox>
            </VBox>
        </ScrollContainer>
    </Page>
</core:FragmentDefinition>
